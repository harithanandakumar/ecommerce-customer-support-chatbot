# Environment Configuration for E-Commerce Customer Support Chatbot
# Copy this file to .env and update with your actual values

# Application Settings
APP_ENV=development
APP_DEBUG=True
APP_PORT=8000

# Chatbot Configuration
CHATBOT_MODEL_TYPE=rule_based
CHATBOT_CONFIDENCE_THRESHOLD=0.6
CHATBOT_MAX_CONVERSATION_LENGTH=50

# Intent Classification
INTENT_CLASSIFIER_TYPE=pattern_matching
INTENT_CONFIDENCE_THRESHOLD=0.5
INTENT_FUZZY_MATCHING=True
INTENT_FUZZY_THRESHOLD=80

# Information Retrieval
IR_ALGORITHM=tfidf
IR_TOP_K_RESULTS=3
IR_SIMILARITY_THRESHOLD=0.3
IR_CACHE_ENABLED=True

# Order Tracking
ORDER_DATA_PATH=data/sample_orders.json
ORDER_LOOKUP_FIELDS=order_id,customer_email
ORDER_CACHE_TTL=3600

# Response Generation
RESPONSE_TEMPLATE_PATH=data/response_templates.json
RESPONSE_PERSONALIZATION_ENABLED=True
RESPONSE_FALLBACK_ENABLED=True
RESPONSE_TYPING_SIMULATION=True

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=logs/chatbot.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5
LOG_CONSOLE_OUTPUT=True

# Performance Settings
PERF_ENABLE_CACHING=True
PERF_CACHE_BACKEND=memory
PERF_REQUEST_TIMEOUT=30
PERF_MAX_CONCURRENT_REQUESTS=100
PERF_ENABLE_METRICS=True

# API Configuration
API_ENABLE_REST=True
API_ENABLE_WEBSOCKET=False
API_RATE_LIMIT_ENABLED=True
API_RATE_LIMIT_REQUESTS=1000
API_RATE_LIMIT_WINDOW=3600
API_ENABLE_CORS=True
API_CORS_ORIGINS=*

# Database (if using)
DB_TYPE=none
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=chatbot_db
# DB_USER=admin
# DB_PASSWORD=password

# External Services (if using)
# SLACK_WEBHOOK_URL=
# EMAIL_SERVICE_ENABLED=False
# EMAIL_SMTP_SERVER=
# EMAIL_SMTP_PORT=587
# EMAIL_FROM_ADDRESS=

# Monitoring & Observability
MONITORING_ENABLED=True
METRICS_COLLECTION_ENABLED=True
HEALTH_CHECK_ENDPOINT=/health
METRICS_ENDPOINT=/metrics

# Security Settings
SECURITY_ENABLE_INPUT_VALIDATION=True
SECURITY_SANITIZE_INPUTS=True
SECURITY_MAX_INPUT_LENGTH=1000
